{
    "manifest_version": 2,
    "name": "Enviar a MantisBT",
    "description": "Convierte el correo seleccionado en una tarea de MantisBT",
    "version": "1.0",
    "icons": {
        "48": "icons/mantis-128.png"
    },
    "applications": {
        "gecko": {
        "id": "enviar-a-mantis@tuemail.com",
        "strict_min_version": "102.0"
        }
    },
    "message_display_action": {                
        "default_title": "Enviar a MantisBT",
        "default_icon": "icons/mantis-128.png"
    },
    "permissions": [
        "messagesRead",
        "activeTab",
        "storage",
        "notifications",
        "*://127.0.0.1/*",
        "*://localhost/*",
        "http://127.0.0.1/*",
        "http://localhost/*",
        "http://localhost/mantisbt/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    },
    "commands": {
        "send-to-mantis": {
            "suggested_key": {
                "default": "Ctrl+Shift+M"
            },
            "description": "Enviar correo seleccionado a MantisBT"
        }
    }
}